---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import Social from "../components/Social.astro";
import LinkedInIcon from "../components/icons/Linkedin.astro";
import GithubIcon from "../components/icons/Github.astro";
import IGIcon from "../components/icons/Instragram.astro";
import FBIcon from "../components/icons/Facebook.astro";
import XIcon from "../components/icons/X.astro";
import Experience from "../components/Experience.astro";
import AcercaMi from "../components/Acerca_mi.astro";
import Email from "../components/icons/Email.astro";
import Download from "../components/icons/Download.astro";
import MoreProjects from "../components/MoreProjects.astro";

    id="contacto"
    class="w-full mx-auto lg:w-[1024px] py-2 px-2 my-2"
    data-aos="zoom-in-right"
    data-aos-delay="100"
  >
    <div class="bg-black/10 rounded-lg p-7">
      <p
        class="text-md font-light text-center text-transparent bg-gradient-to-r from-gray-500 via-gray-500 to-gray-500 bg-clip-text mb-4 uppercase tracking-wider"
        data-aos="zoom-in-left"
        data-aos-delay="300"
      >
        &lt;/ Contacto &gt;
      </p>

      <div class="flex justify-center w-full py-6 gap-3 text-xs mb-1">
        <Social
          href="https://www.instagram.com/saidalfredoig"
          data-aos="zoom-in"
          data-aos-delay="800"
        >
          <IGIcon class="size-10" />
        </Social>
        <Social
          href="https://x.com/saidalfredotw"
          data-aos="zoom-in"
          data-aos-delay="700"
        >
          <XIcon class="size-10" />
        </Social>
        <Social href="" data-aos="zoom-in" data-aos-delay="600">
          <FBIcon class="size-10" />
        </Social>
        <Social
          href="https://github.com/pandacodemx"
          data-aos="zoom-in"
          data-aos-delay="400"
        >
          <GithubIcon class="size-10" />
        </Social>
      </div>
      <div class="flex justify-center w-full gap-3 text-sm">
        <Social href="">
          <Email class="size-4" />
          nava.saidalfredo@gmail.com
        </Social>
      </div>
    </div>
  </section>
</Layout>

<style>
  .profile {
    width: 180px;
    height: 180px;
    overflow: hidden;
    animation: blob 3s ease-in-out infinite;
  }

  .profile img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  @keyframes blob {
    0%,
    100% {
      border-radius: 62% 38% 88% 12% / 55% 71% 29% 45%;
    }
    25% {
      border-radius: 40% 60% 55% 45%;
    }
    50% {
      border-radius: 60% 40% 45% 55%;
    }
    75% {
      border-radius: 50% 50% 50% 50%;
    }
  }
  .terminal-error {
    color: rgb(0, 0, 0);

    padding: 10px;
    width: fit-content;
    white-space: nowrap;
    overflow: hidden;
    border-right: 2px solid rgb(51, 51, 51);
    animation:
      typing 3s steps(22),
      blink 0.6s infinite step-end alternate;
  }

  @keyframes typing {
    from {
      width: 0;
    }
    to {
      width: 12ch;
    }
  }

  @keyframes blink {
    50% {
      border-color: transparent;
    }
  }
</style>
